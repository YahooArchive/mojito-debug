[{
    "settings": ["master"],
    "actionTimeout": 0,
    "viewEngine": {
        "cacheTemplates": false
    },
    "yui": {
        "config-disabled": {
            "filter": "debug"
        }
    },
    "middleware": [
        "./node_modules/mojito-debug/middleware/debug.js"
    ],

    "specs": {
        "main": {
            "type": "HTMLFrameMojit",
            "config": {
                "deploy": true,
                "child": {
                    "type": "Main"
                }
            }
        },
        "debug": {
            "config": {
                "hooks": {
                    "simple-hook": {
                        "title": "Simple Hook"
                    },
                    "mojit-hook": {
                        "title": "Mojit Hook",
                        "description": "This hook was rendered using a mojit.",
                        "type": "MojitHook"
                    }
                }
            }
        }
    }
}]
