[{
    "settings": ["master"],
    "actionTimeout": 0,
    "viewEngine": {
        "cacheTemplates": false
    },

    "middleware": [
        "./node_modules/mojito-debug/middleware/mojito-debug.js"
    ],

    "specs": {
        "main": {
            "type": "HTMLFrameMojit",
            "config": {
                "deploy": true,
                "child": {
                    "type": "Main"
                }
            }
        },
        "debug": {
            "enabled": true,
            "config": {
                "hooks": {
                    "simple-hook": {
                        "title": "Simple Hook"
                    },
                    "mojit-hook": {
                        "title": "Mojit Hook",
                        "description": "This hook was rendered using a mojit.",
                        "type": "MojitHook"
                    }
                }
            }
        }
    }
}, {
    "settings": ["environment:production"],
    "specs": {
        "debug": {
            "enabled": false
        }
    }
}]
